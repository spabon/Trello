<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
<!--      <th>Description</th> -->
      <th>Duration</th>
      <th>Start</th>
      <th>End</th>
      <th>Member</th>
      <th>Check</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.duration %></td>
        <td><%= task.start %></td>
        <td><%= task.end %></td>
        <td><%= task.member.name %></td>
        <td><%= task.check %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


