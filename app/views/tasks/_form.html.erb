<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= t('title') %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= t('description') %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= t('duration') %><br>
    <%= f.text_field :duration %>
  </div>
  <div class="field">
    <%= t('start') %><br>
    <%= f.time_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.time_select :end %>
  </div>
  <div class="field">
    <%= f.label :member_id %><br>
    <%= f.select :member_id, options_for_select(@members) %>
  </div>
  <div class="field">
    <%= f.label :check %><br>
    <%= f.check_box :check %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
